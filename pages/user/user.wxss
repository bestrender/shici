/* pages/user/user.wxss */
.user-container{}
.user-container .author{
  height: 100px;
  width: 100px;
  overflow: hidden;
  margin: 50px auto 0;
  border-radius: 50%;
}
.user-container .author image{
  width: 100px;
  height: 100px;
}
.user-container .author-name{
  font-size: 16px;
  text-align: center;
  margin-top: 20px;
}
.user-container .author-name image{
  height: 32px;
  width: 163px;
}
.user-container .author-desc{
  font-size: 12px;
  text-align: center;
  color: #aaa;
  position: absolute;
  left:0; bottom: 100px;
  width: 100%;
}

