/**index.wxss**/
.container{
  background: #fafafa;
  height: 100vh;
}
.content_view{
  width: 100%;
}

::-webkit-scrollbar{
  display: none;
}

 
/* 背景色设置 */
.author_view,
.pinglun_view,
/* .pinglun_title,
.pinglun_list, */
.sc_view{
  background: #fff;
}

/* 描边颜色 */
.sc_content .list{
  border-color: #eee;
}

/* 作者信息 */
.author_view{
  width: 90%;
  padding:20rpx 5%;
}
.author_icon{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border:1px solid #ccc;
  overflow: hidden;
}
.author_icon image{
  height: 100%;
  width: 100%;
  display: block;
}
.author_info{
  text-align: left;
  padding: 0 16rpx;
}
.author_name{
  color: #333;
  font-size: 28rpx;
}
.author_date{
  color: #666;
  font-size: 20rpx;
}
.autohr_follow .guanzhu{
  width:64rpx;
  height:40rpx;

}
.autohr_follow view{
  font-size: 22rpx;
  color: #666;
}



/* 诗词展示 */
.sc_swiper{
  width: 100%;
}
.sc_view{
  text-align: center;
  width: 80%;
  padding:40rpx 10%;
  margin-top: 20rpx;
  overflow-y:auto;
  -webkit-overflow-scrolling: touch;
  flex:1;
}
.sc_img{
  width: 180px;
  height: 180px;
  margin: 0 auto;
  /* border-radius: 50%; */
  overflow: hidden;
}
.slide-image{
  height: 100%;
  max-width: 200px;
}
.sc_title{
  font-size: 36rpx;
  color: #a80000;
  height: 80rpx;
  line-height: 100rpx;
}
/* .sc_author{
  font-size: 24rpx;
  color: #333;
  padding-top: 20rpx;
} */
.sc_content{
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #1b1b1b;
  line-height: 2;
  letter-spacing: 2;
}
.sc_content .list{
  border-bottom-width: 1px;
  border-bottom-style: dashed;
  /* width: 90%; */
  /* padding-left: 10%; */
  height: 80rpx;
  line-height: 100rpx;
  /* text-align: left; */
  text-align: center;
}
.sc_notes{
  font-size: 20rpx;
  color: #999;
  line-height: 80rpx;
  text-align: right;
  padding-right: 80rpx;
}



