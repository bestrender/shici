/* 互动区 */
.bottom-right-fixed{
  position: fixed;
  right:10rpx;
  bottom: 5%;
  z-index: 10;
}

.viewer_range .list{
  padding:10rpx;
  box-sizing:border-box;
  background:none;
  border:none;
  color: #666;
  font-size:12px;
  line-height: 1.5;
}
.viewer_range .list::after{
  border:none;
}
.viewer_range .list .icon{
  width: 60rpx;
  height: 40rpx;
  margin:0 auto;
}
.viewer_range .list .text{
  color: #aaa;
  font-size: 22rpx;
  text-align: center;
}


