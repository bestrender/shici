/**app.wxss**/
.container {
  box-sizing: border-box;
  font-family: "微软雅黑";
} 

.wx-flex{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.wx-flex .flex{
  flex: 1;
  display: block;
}

.wx-box{
  display: box;
  display: -webkit-box;
  -webkit-box-align: center;
  box-align: center;
  text-align: center;
  -webkit-box-pack: center;
  box-pack: center;
}
.wx-box .item{
  box-flex: 1;
  -webkit-box-flex: 1;
  display: block;
}

